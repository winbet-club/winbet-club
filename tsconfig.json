{
  "compilerOptions": {
    "paths": {
      "src": [
        "src/"
      ],
      "context": [
        "context"
      ],
      "atoms": [
        "components/atoms"
      ],
      "molecules": [
        "components/molecules"
      ],
      "organisms": [
        "components/organisms"
      ],
      "infrastructure": [
        "infrastructure"
      ],
      "interfaces": [
        "interfaces"
      ],
      "core": [
        "core"
      ],
      "actionConstants": [
        "redux/actionConstants"
      ],
      "reducers": [
        "redux/reducers"
      ],
      "sagas": [
        "redux/sagas"
      ],
      "views": [
        "views"
      ],
      "helpers": [
        "helpers"
      ],
      "images": [
        "assets/images"
      ],
      "servises": [
        "servises"
      ],
    },
    "baseUrl": "src/",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,

    "types": [
      "react",
      "jest",
      "node"
    ],
    "typeRoots": [
        "node_modules/@types",
        "src/@types/alltypes.d"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
}

